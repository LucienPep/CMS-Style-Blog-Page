<div class="borderMD row mb-4 post">
  <div class="col-md-12">
    <h2>
      {{post.title}}
    </h2>
    <p>
    {{post.content}}
    </p>
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
</div>

{{#if comments.length}}
<div class="borderMD row mb-4 post">
  <div class="col-md-12">
    <div class="col-md-6 post-list">
      <h3 class="title2">Comments</h3>
  
      {{#each comments as |comment|}}
      <div class="borderMA row mb-2">
        <div class="col-md-10">
          <p>{{comment.content}}</p>
          <p>Created by {{comment.user_name}} on {{format_date comment.date_created}}</p>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
{{/if}}

<div class="borderMD row mb-4 post">
  <div class="col-md-12">
    <form class="form comment-post-form">
        <div class="form-group">
          <label for="post-title">Comment:</label>
          <textarea class="form-input" type="text" id="post-comment" name="post-name"></textarea>
          <button id="{{post.id}}" type="submit" class="btn btn-primary">Comment</button>
        </div>
    </form>
  </div>
</div>

<script src="/js/profile.js"></script>
