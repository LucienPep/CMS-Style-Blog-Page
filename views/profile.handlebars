<div class="row mt-4">
  <div class="col-md-6">
    <h3 class="title2">Write a New Blog Post</h3>
    <button class="borderBase btn btn-primary"><a class= 'title2 'href="/newpost">Write a New Blog Post</a></button>

  {{#if posts.length}}
  <div class="col-md-6 project-list">
    <h3 class="title2">Posts</h3>

    {{#each posts as |post|}}
    <div class="borderMA row mb-2">
      <div class="col-md-10">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
